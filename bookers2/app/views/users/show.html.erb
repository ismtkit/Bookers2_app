<div class="container px-5 px-sm-0">
  <div class="row">
   <%= render 'books/sidebar', book: @book_new, user: @user %>
   <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
           <% @books_user.each do |book| %>
           <tr>
               <td>
               <%= link_to user_path(book.user.id) do %>
                 <%= attachment_image_tag book.user, :profile_image,  fallback: "no_image.jpg", class:"mt-3 rounded-circle", size: "40x40" %>
               <% end %>
             </td>
             <td>
               <%= link_to book_path(book.id) do %>
                 <%= book.title %>
               <% end %>
             </td>
             <td><%= book.body %></td>
             <td id="book_<%= book.id %>">
               <%= render 'favorites/list', book: book %>
             </td>
           </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>