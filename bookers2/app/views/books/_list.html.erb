<div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% books.each do |book| %>
           <tr>
             <td>
               <%= link_to user_path(book.user.id) do %>
                 <%= attachment_image_tag book.user, :profile_image,  fallback: "no_image.jpg", class:"mt-3 rounded-circle", size: "40x40" %>
               <% end %>
             </td>
             <td>
               <%= link_to book_path(book.id) do %>
                 <%= book.title %>
               <% end %>
             </td>
             <td><%= book.body %></td>
             <td>
               <% if book.favorited_by?(current_user) %>
                 <p>
                   <%= link_to book_favorites_path(book), class: "fas fa-heart unfav-btn", method: :delete do %>
                     <%= book.favorites.count %>
                   <% end %>
                 </p>
               <% else %>
                 <p>
                   <%= link_to book_favorites_path(book), class: "fas fa-heart", method: :post do %>
                     <%= book.favorites.count %>
                   <% end %>
                 </p>
               <% end %>
             </td>
           </tr>
         <% end %>
        </tbody>
      </table>
    </div>